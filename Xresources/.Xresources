! Colors in $HOME/.config/Xresource.d/   Use xrdb -load; xrdb -merge.

!!! Cursor !!!
	URxvt.cursorBlink:          false
	URxvt.cursorColor:          #657b83
	URxvt.cursorUnderline:      false

!URxvt -depth 32 -bg rgba:0000/0000/0000/4444

! aids solarized, not sure why.
!URxvt.intensityStyles: false

!!! Fonts !!!
!URxvt*font: xft:Bitstream Vera Sans Mono:pixelsize=10:antialias=true:hinting=true
!URxvt*boldFont: xft:Bitstream Vera Sans Mono:bold:pixelsize=10:antialias=true:hinting=true

! Adobe: Source fonts
!URxvt.font: xft:Source Code Pro:Regular:pixelsize=12:antialias=true:hinting=true
!URxvt.boldFont: xft:Source Code Pro:Bold:pixelsize=12:antialias=true:hinting=true
URxvt.font: xft:Inconsolata:Medium:pixelsize=12
URxvt.boldFont: xft:Inconsolata:Medium:pixelsize=12
!URxvt*font: ttf:DejaVu Sans Mono:pixelsize=12:antialias=true:hinting=true
!URxvt*boldFont: ttf:DejaVu Sans Mono:bold:pixelsize=12:antialias=true:hinting=true

!URxvt*font: xft:Liberation Mono:pixelsize=13:antialias=true:hinting=true
!URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=11:antialias=true:hinting=true
 
!URxvt*font: xft:terminus:pixelsize=13
!URxvt*boldFont: xft:terminus:bold:pixelsize=13

!!! Xft font porn !!!
Xft.antialias: 1
Xft.autohint: 0
Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.dpi: 96
Xft.rgba: rgb

!!! scrolling !!!
! scrollbar - true (default) or false
URxvt*scrollBar: false
!URxvt*scrollBar_right: false
! scrollbar style - rxvt (default), plain, next, or xterm
!URxvt*scrollstyle: rxvt

! do not scroll with output
!URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
!URxvt*scrollTtyKeypress: true
!URxvt.secondaryScreen: 1
!URxvt.secondaryScroll: 0

!!! misc !!!
!URxvt*backgroundPixmap: /home/$USER/Pictures/
URxvt.urgentOnBell: true
URxvt*saveLines: 65000
URxvt*transparent: false
!Xcursor.theme: Vanilla-DMZ-AA
!Xcursor.size:  22
URxvt.letterSpace: -1

!!! urxvt-perls ext !!!
!package for url keyboard selection etc, see arch urxvt.
!shortcuts URL Alt+u select url, TABS Sft-down new tab, Ctrl+lft/rgt go lft/rgt,
!Ctrl+d delete tab, Ctrl+lft/rgt move lft/rgt
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select, !tabbed
URxvt.url-select.launcher:  /usr/bin/firefox
URxvt.keysym.Control-C: perl:clipboard:copy
URxvt.keysym.Control-V: perl:clipboard:paste
URxvt.matcher.button: 3
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search
!URxvt.tabbed.tabbar-fg: 2
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 3
!URxvt.tabbed.tab-bg: 0

 
