# Start some apps at login
exec --no-startup-id compton -b 
exec --no-startup-id xset dpms 0 0 600
exec --no-startup-id xautolock -time 15 -locker "systemctl suspend"
exec --no-startup-id feh --image-bg black --bg-center '$HOME/Pictures/A9hBzmg.jpg'

## multi funtion script for reboot etc.
set $Locker i3lock && sleep 1
set $mode_system System Logout L   Suspend S   Reboot R   Shutdown Sft+S   Hibernate=H
mode "$mode_system" {
#   bindsym e exec --no-startup-id $Locker, mode "default"
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"


# Some nice Keybindings
